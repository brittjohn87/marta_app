<%= form_with(model: location, local: true) do |form| %>
  <% if location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
      <% location.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="container">
    <div class="col-md-3">
    </div>
    <div class="col-md-3">
    </div>
    <div class="col-md-3">
    </div>
    <div class="col-md-3">
      <div class="panel panel-success">
        <div class="panel panel-body">
          <div class="form-group">
          <%= form.label :address %>
          <%= form.text_field :address, id: :location_address, placeholder: "What is your exact address/location?", class: "form-control" %>
          </div>

          <div class="form-group">
          <%= form.label :city %>
          <%= form.text_field :city, id: :location_city, placeholder: "What City are you in?", class: "form-control" %>
          </div>

          <div class="actions">
          <%= form.submit %>
          </div>
          <% end %>

          <h1>Recent Locations:</h1>
      
            <% @locations=Location.all %>  

                <table class="table">
                  <thead>
                    <tr>
                      <th>Address</th>
                      <th>City</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @locations.each do |location| %> 
                    <tr>
                      <td><%= link_to location.address, location_path(id: location.id) %></td>
                      <td><%= location.city %></td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
        </div>
      </div>
    </div>
</div>









  
    
  

